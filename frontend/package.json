{
  "name": "ensotek-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "typecheck": "NODE_OPTIONS=--max-old-space-size=4096 tsc -p tsconfig.build.json --noEmit",
    "build": "NODE_OPTIONS=--max-old-space-size=6144 next build --no-lint",
    "build:full": "npm run typecheck && npm run build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "test": "bun test",
    "analyze": "NODE_OPTIONS=--max-old-space-size=6144 ANALYZE=true next build --no-lint",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:prod": "npm run build && NEXT_START=1 playwright test",
    "perf:audit": "node perf-audit.mjs",
    "perf:desktop": "FORM_FACTOR=desktop node perf-audit.mjs",
    "perf:audit:prod": "node perf-audit-prod.mjs"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.5",
    "axios": "^1.12.2",
    "next": "^15.3.0",
    "next-intl": "3.26.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.1.2",
    "styled-components": "^6.1.19",
    "typecheck": "^0.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^5.0.3",
    "chrome-launcher": "^1.2.0",
    "cli-table3": "^0.6.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.5% in TR",
      "last 2 versions",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
